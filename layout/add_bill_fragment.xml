<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bigAddbillfragmentConst"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddBill">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#25388E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="YENİ FATURA"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/specialpriceLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#17171414"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/closeTheSpecialLinearBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/close_tab" />

            <ImageView
                android:id="@+id/addmoreSpecialPrice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add_more_asset" />

            <LinearLayout
                android:id="@+id/partofSpecialLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/cake"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/cerceve"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/selectSpecial"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Seç"
                            android:inputType="none"
                            android:maxLines="2"
                            android:textSize="12sp">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/editTextNumber"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Tutar"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cake2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/cerceve"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectSpecial2Border"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/selectSpecial2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Seç"
                            android:inputType="none"
                            android:textSize="12sp">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/editTextNumber2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Tutar"
                        android:inputType="number" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cake3"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:background="@drawable/cerceve"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectSpecial3Border"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/selectSpecial3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Seç"
                            android:inputType="none"
                            android:textSize="12sp">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/editTextNumber3"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Tutar"
                        android:inputType="number" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/partofSpecialLinear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/cake4"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/cerceve"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectSpecial4Border"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/selectSpecial4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Seç"
                            android:inputType="none"
                            android:textSize="12sp">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/editTextNumber4"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Tutar"
                        android:inputType="number" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cake5"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/cerceve"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectSpecial5Border"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/selectSpecial5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Seç"
                            android:inputType="none"
                            android:textSize="12sp">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/editTextNumber5"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Tutar"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cake6"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:background="@drawable/cerceve"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectSpecial6Border"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/selectSpecial6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Seç"
                            android:inputType="none"
                            android:textSize="12sp">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/editTextNumber6"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Tutar"
                        android:inputType="number" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/deleteAllSpecialPricesBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/broom"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fatura ismini giriniz." />

                <EditText
                    android:id="@+id/addtheBillname_addbillfragment"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fatura tutarını giriniz." />

                <EditText
                    android:id="@+id/addprice_addbillfragment"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/photoOfBill_addbillfragment"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="#3E6496B1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/insertphoto_black_asset" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yükle"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/zoomIn"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="#6A396511"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/selectedBillImage_addbillfragment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/zoom_in_asset" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Büyüt"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/specialPriceForEveryPersonBtn"
                    android:layout_width="130dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:backgroundTint="#4B424557"
                    android:text="Kişiye Özel Tutar Gir"
                    app:cornerRadius="0dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="326dp" />

            <ImageView
                android:id="@+id/savetheBill"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/billsavebtn" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showinbigScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageOnBigScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/zoomOut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/baseline_zoom_out_24" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>