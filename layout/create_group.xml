<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65A19898"
    tools:context=".activity.CreateGroup">

    <LinearLayout
        android:id="@+id/bigLinearCreateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#319E859E"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/warningText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#78690A"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/selectGroupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Grup İsmi"
            android:inputType="text"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum Bir Kişiyi Seçiniz"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextCreateGroup7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seç"
                    android:inputType="none">

                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/addMoreBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/add_more_asset"
                tools:layout_editor_absoluteX="70dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextCreateGroup8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seç"
                    android:inputType="none">

                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/addMoreBtn2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/add_more_asset"
            tools:layout_editor_absoluteX="70dp" />

        <LinearLayout
            android:id="@+id/linearX2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/getInp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="140dp"

                android:layout_height="wrap_content"
                android:padding="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextCreateGroup3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seç"
                    android:inputType="none">

                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextCreateGroup4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seç"
                    android:inputType="none">

                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/addMoreBtn3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/add_more_asset"
            tools:layout_editor_absoluteX="70dp" />

        <LinearLayout
            android:id="@+id/linearX3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/createGroupLinearLay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextCreateGroup6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seç"
                        android:inputType="none">

                    </AutoCompleteTextView>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/createGroupLinearLay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextCreateGroup5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seç"
                        android:inputType="none">

                    </AutoCompleteTextView>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cleangrouptexts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cleanhands_asset" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temizle" />
        </LinearLayout>

        <ImageView
            android:id="@+id/group_save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/savegray_asset" />
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </com.google.android.gms.ads.AdView>
</androidx.constraintlayout.widget.ConstraintLayout>